# Configuración general
NAMESPACE=predictive-maintenance
ENV=development

# Docker registry
DOCKER_REGISTRY=localhost:5000

# Base de datos
TIMESCALEDB_PASSWORD=postgres123
REDIS_PASSWORD=redis123

# API y seguridad
API_KEYS=test_key,development_key
SECRET_KEY=change_this_to_a_secure_secret_key

# Notificaciones
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=notifications@example.com
EMAIL_PASSWORD=your_email_password
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz

# Integración con Kubernetes
ENABLE_K8S_INTEGRATION=false

# Configuración de componentes
LOG_LEVEL=INFO
METRICS_ENABLED=true
PROMETHEUS_PUSH_GATEWAY=pushgateway:9091

# Puertos de servicios
API_PORT=8000
DASHBOARD_PORT=3001
GRAFANA_PORT=3000
PROMETHEUS_PORT=9090
TIMESCALEDB_PORT=5432
REDIS_PORT=6379