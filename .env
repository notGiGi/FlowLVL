# .env - Variables de entorno para el proyecto
# Guardar como: ./.env

# Configuración de la base de datos
DB_HOST=timescaledb
DB_PORT=5432
DB_USER=predictor
DB_PASSWORD=predictor_password
DB_NAME=metrics_db

# Configuración de Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:29092

# Configuración de la API REST
API_PORT=8000
API_HOST=0.0.0.0
API_DEBUG=false

# Configuración del recolector de datos
COLLECTION_INTERVAL=60
ENABLE_PROMETHEUS_COLLECTOR=true
ENABLE_NODE_COLLECTOR=true
ENABLE_LOG_COLLECTOR=true
ENABLE_KUBERNETES_COLLECTOR=false

# Configuración del detector de anomalías
ANOMALY_THRESHOLD=0.85
ANOMALY_DETECTION_BATCH_SIZE=100

# Configuración del motor predictivo
PREDICTION_HORIZON=5
FAILURE_THRESHOLD=0.7
SEQUENCE_LENGTH=20

# Configuración del recomendador de acciones
AUTO_REMEDIATION=true
REINFORCEMENT_LEARNING=true

# Configuración de Grafana y Prometheus
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Configuración del dashboard
REACT_APP_API_URL=http://localhost:8000
DASHBOARD_PORT=3001